<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="每日学习时间计划表"
        android:textSize="28sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="411dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="18:30-21:00 晚自习，巩固复习" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText10"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="16:30-17:30 每日体育锻炼时间" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText9"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="物化生综合训练" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText8"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="14:00-16:30" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText7"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="午饭午休时间到了。" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="12:00-14:00" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText5"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="数学，集中精力攻克难题" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText4"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="10:20-12:00" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText3"
            android:layout_alignParentLeft="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="中英语，利用清晨时间记忆性学习" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText2"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="8:00-10:00" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnqdtx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="41dp"
        android:text="签到提醒" />

    <Button
        android:id="@+id/btnreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="54dp"
        android:layout_toLeftOf="@+id/btnqdtx"
        android:text="返回" />

</RelativeLayout>